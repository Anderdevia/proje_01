@model BE.CentroOperaciones

@{
    ViewBag.Title = "Detalles del centro de Operacion";
}


<div class="container mt-5">
    <div class="row">
        <!-- Imagen del Centro de Operación -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img src="@Model.NombreImagen" alt="Centro de Operación" class="img-fluid rounded shadow-lg" style="max-width: 100%; height: auto;">
        </div>

        <!-- Información del Centro -->
        <div class="col-md-6">
            <h1 class="fw-bold text-primary">@Model.Nombre</h1>
            <p class="text-muted">Número de Visitas: <span class="fw-bold">@Model.Visitas</span></p>

            <h5 class="fw-bold mt-3">Descripción:</h5>
            <p class="text-justify text-dark">@Model.Descripcion</p>

            <!-- Botón de acción -->
            <div class="mt-4">
            </div>
        </div>
    </div>
</div>


<!-- Sección de Información Adicional -->
<div class="row mt-5">
    <div class="col-md-4">
        <div class="card shadow p-4 text-center">
            <h4 class="fw-bold"><i class="fas fa-map-marker-alt"></i> Ubicación</h4>
            <p>Dirección: @Model.Direccion</p>
            <p>Horario: Lunes - Viernes (8:00 AM - 6:00 PM)</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow p-4 text-center">
            <h4 class="fw-bold"><i class="fas fa-phone"></i> Contacto</h4>
            <p>Teléfono: @Model.Telefono</p>
            <p>Email: @Model.Correo</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow p-4 text-center">
            <h4 class="fw-bold"><i class="fas fa-tools"></i> Servicios</h4>
            <p>Monitoreo, soporte técnico, planificación y emergencias.</p>
        </div>
    </div>
</div>

<!-- Sección de Ubicación en un Mapa -->
<div class="mt-5">
    <h2 class="text-center fw-bold text-primary">Nuestra Ubicación</h2>
    <div class="map-container mt-3 shadow rounded">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.632434012694!2d-74.07209272422106!3d4.710988641599558!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f99c8b61e5975%3A0xb4c6f5fefdd7a24d!2sBogot%C3%A1%2C%20Colombia!5e0!3m2!1ses!2sco!4v1708178467852!5m2!1ses!2sco"
                width="100%"
                height="300"
                style="border:0;"
                allowfullscreen=""
                loading="lazy">
        </iframe>
    </div>
</div>



<!-- Footer -->
<footer class="footer bg-dark text-light mt-5 p-4">
    <div class="container text-center">
        <h4 class="fw-bold">¿Qué se hace en un Centro de Operación?</h4>
        <p>
            En nuestros centros de operación realizamos tareas clave como monitoreo de sistemas, atención al cliente y gestión de emergencias,
            asegurando un servicio eficiente y seguro para nuestros usuarios.
        </p>
        <!-- Redes Sociales -->
        <div class="mt-3">
            <a href="#" class="text-light mx-3"><i class="fab fa-facebook fa-2x"></i></a>
            <a href="#" class="text-light mx-3"><i class="fab fa-twitter fa-2x"></i></a>
            <a href="#" class="text-light mx-3"><i class="fab fa-linkedin fa-2x"></i></a>
        </div>
    </div>
</footer>


<style>
    .shadow-lg {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .rounded {
        border-radius: 15px;
    }
</style>